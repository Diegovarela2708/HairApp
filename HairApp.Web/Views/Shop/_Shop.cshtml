@model HairApp.Web.Models.ShopViewModel

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group">
    <div class="checkbox">
        <label>
            <input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
        </label>
    </div>
</div>

<div class="form-group">
    <label asp-for="Addrees" class="control-label"></label>
    <input asp-for="Addrees" class="form-control" />
    <span asp-validation-for="Addrees" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="DepartamentId" class="control-label"></label>
    <select asp-for="DepartamentId" asp-items="Model.Departaments" class="form-control"></select>
    <span asp-validation-for="DepartamentId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="CityId" class="control-label"></label>
    <select asp-for="CityId" asp-items="Model.Cities" class="form-control"></select>
    <span asp-validation-for="CityId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="NeighborhoodId" class="control-label"></label>
    <select asp-for="NeighborhoodId" asp-items="Model.Neighborhoods" class="form-control"></select>
    <span asp-validation-for="NeighborhoodId" class="text-danger"></span>
</div>
